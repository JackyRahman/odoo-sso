<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_sso" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.odoo.sso</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="SSO" string="SSO">
                    <h2>SSO</h2>
                    <div class="row mt16 o_setting_box">
                        <div class="col-12 col-lg-6 o_setting_left_pane">
                            <label for="sso_login_url"/>
                            <div class="text-muted">URL for SSO login redirect</div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_right_pane">
                            <field name="sso_login_url"/>
                        </div>
                    </div>
                    <div class="row mt16 o_setting_box">
                        <div class="col-12 col-lg-6 o_setting_left_pane">
                            <label for="sso_logout_url"/>
                            <div class="text-muted">URL to redirect after logout</div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_right_pane">
                            <field name="sso_logout_url"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>